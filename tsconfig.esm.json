{
	"compilerOptions": {
		"module": "ESNext",
		"lib": ["ESNext"],
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "dist/esm",
		"moduleResolution": "Node",
		"declaration": true,
		"declarationDir": "dist/types"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.js"
	]
}
